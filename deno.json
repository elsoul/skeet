{
  "workspace": [
    "./packages/cli",
    "./templates/discord-bot",
    "./templates/deno-api-prisma"
  ],
  "nodeModulesDir": "auto",
  "tasks": {
    "cli": "deno task --cwd packages/cli",
    "deploy:cli": "cd packages/cli && deno publish",
    "discord-bot": "deno task --cwd templates/discord-bot",
    "db:dev:prisma": "deno run -A npm:prisma migrate dev --schema cmn/prisma/skeet/skeet.prisma",
    "db:gen:prisma": "deno run -A npm:prisma generate --no-engine --schema cmn/prisma/skeet/skeet.prisma"
  },
  "imports": {
    "@cmn/": "./cmn/",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@0.225.2",
    "@prisma/client": "npm:@prisma/client@5.21.0",
    "@hono/hono": "jsr:@hono/hono@4.6.5"
  },
  "compilerOptions": {
    "checkJs": true
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  }
}
