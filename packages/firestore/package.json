{
  "name": "@skeet-framework/firestore",
  "version": "2.5.0",
  "description": "Skeet Framework Plugin - Firestore",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/esm/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/elsoul/skeet.git"
  },
  "keywords": [
    "TypeScript",
    "Serverless",
    "Web3js",
    "Skeet Plugin",
    "Solana"
  ],
  "author": "ELSOUL LABO B.V.",
  "license": "Apache-2.0",
  "private": false,
  "bugs": {
    "url": "https://github.com/elsoul/skeet/issues"
  },
  "homepage": "https://skeet.dev",
  "scripts": {
    "test": "vitest",
    "build": "rm -rf dist/ && npx ts-node -r tsconfig-paths/register --transpile-only build.ts && tsc --emitDeclarationOnly",
    "test:ci": "npx firebase emulators:exec --only firestore 'yarn run test'",
    "dev:emulator": "firebase emulators:start --only firestore --project fakeproject",
    "build-doc": "typedoc src/index.ts --out docs",
    "dev": "npx ts-node -r tsconfig-paths/register --transpile-only src/index.ts",
    "lint": "eslint --ext .ts,.js --fix ."
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "firebase": "10.3.0",
    "firebase-admin": "11.10.1",
    "jest": "29.4.3",
    "node-fetch": "2.6.9"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "3.0.0",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.9",
    "@types/node-fetch": "2.6.2",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "babel-loader": "9.1.2",
    "esbuild": "0.17.7",
    "eslint": "8.47.0",
    "eslint-config-prettier": "8.5.0",
    "esbuild-plugin-alias-path": "2.0.2",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "2.7.1",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typedoc": "0.24.7",
    "typescript": "5.0.4",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.1"
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write",
    "{src,tests}/**/*.ts": "eslint --fix"
  }
}
